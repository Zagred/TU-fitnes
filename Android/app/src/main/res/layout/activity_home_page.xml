<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".HomePage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingTop="10dp"
        android:paddingEnd="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="65dp"
                android:text="TU"
                android:textColor="@color/yellow"
                android:textSize="40sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="26dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fitness"
                    android:textColor="@color/white"
                    android:textSize="40sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginTop="-6dp"
                    android:background="@color/yellow" />
            </LinearLayout>
        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/btProfileHomeP"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/panda"
            app:civ_border_color="@android:color/black"
            app:civ_circle_background_color="@android:color/white" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="130dp"
        app:cardCornerRadius="32dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alignmentMode="alignMargins"
                    android:columnCount="2"
                    android:columnOrderPreserved="false"
                    android:useDefaultMargins="true"
                    android:padding="16dp"
                    android:gravity="center"
                    android:layout_gravity="center">

                    <Button
                        android:id="@+id/btMealsHomeP"
                        android:layout_width="180dp"
                        android:layout_height="80dp"
                        android:backgroundTint="@color/white"
                        android:drawableLeft="@drawable/meals"
                        android:text="Meals"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        app:cornerRadius="70dp"
                        android:elevation="8dp"
                        android:translationZ="2dp"/>

                    <Button
                        android:id="@+id/btLocationsHomeP"
                        android:layout_width="180dp"
                        android:layout_height="80dp"
                        android:backgroundTint="@color/white"
                        android:drawableLeft="@drawable/location"
                        android:text="Locations"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        app:cornerRadius="70dp"
                        android:elevation="8dp"
                        android:translationZ="2dp"/>

                    <Button
                        android:id="@+id/btCalendarHomeP"
                        android:layout_width="180dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="25dp"
                        android:backgroundTint="@color/white"
                        android:drawableLeft="@drawable/calendar"
                        android:text="Calendar"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        app:cornerRadius="70dp"
                        android:elevation="8dp"
                        android:translationZ="2dp"/>

                    <Button
                        android:id="@+id/btTrainerHomeP"
                        android:layout_width="180dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="25dp"
                        android:backgroundTint="@color/white"
                        android:drawableLeft="@drawable/coach"
                        android:text="Coach"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        app:cornerRadius="70dp"
                        android:elevation="8dp"
                        android:translationZ="2dp"/>

                    <Button
                        android:id="@+id/btChallengeHomeP"
                        android:layout_width="180dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="25dp"
                        android:backgroundTint="@color/white"
                        android:drawableLeft="@drawable/challenge"
                        android:text="Challenges"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        app:cornerRadius="70dp"
                        android:elevation="8dp"
                        android:translationZ="2dp" />

                    <Button
                        android:id="@+id/btCalculatorHomeP"
                        android:layout_width="180dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="25dp"
                        android:backgroundTint="@color/white"
                        android:drawableLeft="@drawable/calculator"
                        android:text="Calculator"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        app:cornerRadius="70dp"
                        android:elevation="8dp"
                        android:translationZ="2dp"/>
                </GridLayout>
            </ScrollView>
    </androidx.cardview.widget.CardView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/yellow"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btHome"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                app:icon="@drawable/home"
                app:iconGravity="top"
                app:iconPadding="4dp"
                app:iconTint="@color/black"
                android:text="Home"
                android:textSize="11sp"
                android:textColor="@color/black"
                app:cornerRadius="70dp"
                android:backgroundTint="@color/white"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btCommunityHomeP"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                app:icon="@drawable/community"
                app:iconGravity="top"
                app:iconPadding="4dp"
                app:iconTint="@color/black"
                android:text="Social"
                android:textSize="11sp"
                android:textColor="@color/black"
                app:cornerRadius="70dp"
                android:backgroundTint="@color/white"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btFriendsHomeP"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                app:icon="@drawable/friends"
                app:iconGravity="top"
                app:iconPadding="4dp"
                app:iconTint="@color/black"
                android:text="Friends"
                android:textSize="11sp"
                android:textColor="@color/black"
                app:cornerRadius="70dp"
                android:backgroundTint="@color/white"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btWorkoutHomeP"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                app:icon="@drawable/workout"
                app:iconGravity="top"
                app:iconPadding="4dp"
                app:iconTint="@color/black"
                android:text="Workout"
                android:textSize="11sp"
                android:textColor="@color/black"
                app:cornerRadius="70dp"
                android:backgroundTint="@color/white"/>
        </LinearLayout>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
