<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow"
    tools:context=".challenge.ChallengePROOFActivity">

    <!-- Заглавие -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:text="Challenge Proof"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Основна карта -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="130dp"
        android:layout_marginBottom="-30dp"
        app:cardCornerRadius="32dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingHorizontal="20dp">

                <TextView
                    android:id="@+id/tvChallengeTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="Challenge Title"
                    android:textSize="24sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/tvChallengeDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Challenge description goes here..."
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:gravity="center" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvChallengeDifficulty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Difficulty: MEDIUM"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_marginEnd="16dp" />

                    <TextView
                        android:id="@+id/tvChallengePoints"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/min_fitness"
                        android:text="2 "
                        android:textSize="14sp"
                        android:textColor="@color/black" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Before"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="24dp"
                    android:gravity="center" />

                <ImageView
                    android:id="@+id/imgBefore"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="8dp"
                    android:background="#EEEEEE"
                    android:scaleType="centerCrop"
                    android:contentDescription="Before image" />

                <Button
                    android:id="@+id/btnTakeBefore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Take Before Photo"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="@color/black"
                    app:cornerRadius="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="After"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="24dp"
                    android:gravity="center" />

                <ImageView
                    android:id="@+id/imgAfter"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="8dp"
                    android:background="#EEEEEE"
                    android:scaleType="centerCrop"
                    android:contentDescription="After image" />

                <Button
                    android:id="@+id/btnTakeAfter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Take After Photo"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="@color/black"
                    app:cornerRadius="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="How was your experience?"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="24dp"
                    android:gravity="left" />

                <EditText
                    android:id="@+id/etfeedback"
                    android:layout_width="410dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="8dp"
                    android:background="@android:drawable/editbox_background"
                    android:hint="Share your experience..."
                    android:inputType="textMultiLine"
                    android:minLines="3"
                    android:padding="10dp" />

                <Button
                    android:id="@+id/btnSubmitExperience"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/black"
                    android:text="Submit Experience"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:cornerRadius="40dp" />

                <Button
                    android:id="@+id/btnComplete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="50dp"
                    android:backgroundTint="@color/red"
                    android:text="Complete Challenge"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:cornerRadius="40dp" />
            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>